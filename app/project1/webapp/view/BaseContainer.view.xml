<mvc:View
    controllerName="aditi.expense.ui.project1.controller.BaseContainer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:m="sap.m"
    displayBlock="true"
    xmlns:f="sap.f"
>
    <tnt:ToolPage id="mainToolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <m:Text text="My Dashboard" />
                <f:Avatar initials="AD" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList
                selectedKey="dashboard">
                    <tnt:NavigationListItem
                        text="Dashboard"
                        icon="sap-icon://home"
                        press=".onSideNavItemPress"
                        key="dashboard"
                    />
                    <tnt:NavigationListItem
                        text="Orders"
                        icon="sap-icon://cart"
                        press=".onSideNavItemPress"
                        key="orders"
                    />
                    <tnt:NavigationListItem
                        text="Customers"
                        icon="sap-icon://customer"
                        press=".onSideNavItemPress"
                        key="customers"
                    />
                    <tnt:NavigationListItem
                        text="Products"
                        icon="sap-icon://product"
                        press=".onSideNavItemPress"
                        key="products"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer id="innerNav"/>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
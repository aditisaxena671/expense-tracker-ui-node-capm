<mvc:View
    controllerName="aditi.expense.ui.project1.controller.AddExpense"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:m="sap.m"
    displayBlock="true"
>
    <tnt:ToolPage id="mainToolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <m:Text text="My Dashboard" />
                <f:Avatar initials="AD" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList selectedKey="dashboard">
                    <tnt:NavigationListItem
                        text="Dashboard"
                        icon="sap-icon://home"
                        press=".onSideNavItemPress"
                        key="dashboard"
                    />
                    <tnt:NavigationListItem
                        text="Add Expense"
                        icon="sap-icon://cart"
                        press=".onSideNavItemPress"
                        key="addExpense"
                    />
                    <tnt:NavigationListItem
                        text="View Analysis"
                        icon="sap-icon://customer"
                        press=".onSideNavItemPress"
                        key="viewAnalysis"
                    />
                    <tnt:NavigationListItem
                        text="View Expense Details"
                        icon="sap-icon://product"
                        press=".onSideNavItemPress"
                        key="expenseDetails"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <f:DynamicPage showFooter="true">
                <!-- Header -->
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <Title
                                text="Add Expense"
                                level="H2"
                            />
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>

                <!-- Content -->
                <f:content>
                    <VBox
                        class="sapUiSmallMargin"
                        width="100%"
                    >
                        <Panel
                            headerText="Expense Details"
                            expandable="false"
                            class="sapUiResponsiveMargin"
                            width="auto"
                        >
                            <VBox
                                class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop sapUiSmallMarginBottom"
                            >
                                <!-- Title -->
                                <Input
                                    id="inputTitle"
                                    maxLength="100"
                                    placeholder="Expense title"
                                    width="100%"
                                    class="sapUiTinyMarginBottom"
                                />

                                <!-- Amount -->
                                <Input
                                    id="inputAmount"
                                    type="Number"
                                    placeholder="Amount (â‚¹)"
                                    width="100%"
                                    class="sapUiTinyMarginBottom"
                                />

                                <!-- Date -->
                                <DatePicker
                                    id="inputDate"
                                    placeholder="Select Date"
                                    displayFormat="long"
                                    valueFormat="yyyy-MM-dd"
                                    width="100%"
                                    class="sapUiTinyMarginBottom"
                                />

                                <!-- Note -->
                                <TextArea
                                    id="inputNotes"
                                    rows="3"
                                    placeholder="Additional notes"
                                    width="100%"
                                    class="sapUiTinyMarginBottom"
                                />
                                <Label
                                    id="showErrorInExpense"
                                    visible="false"
                                    text="Some fields are empty"
                                    design="Bold"
                                />

                                <!-- Category -->
                                <ComboBox
                                    items="{/Categories}"
                                    width="100%"
                                    placeholder="Category"
                                >
                                    <core:Item
                                        key="{ID}"
                                        text="{description}"
                                    />
                                </ComboBox>
                            </VBox>
                        </Panel>
                    </VBox>
                </f:content>

                <!-- Footer -->
                <f:footer>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            text="Cancel"
                            type="Transparent"
                            press="onCancel"
                        />
                        <Button
                            text="Save Expense"
                            type="Emphasized"
                            icon="sap-icon://save"
                            press="onSave"
                        />
                    </OverflowToolbar>
                </f:footer>
            </f:DynamicPage>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>

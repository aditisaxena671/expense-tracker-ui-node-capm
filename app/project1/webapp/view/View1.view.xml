<mvc:View
    controllerName="aditi.expense.ui.project1.controller.View1"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    height="100%"
>
    <HBox
        width="100%"
        height="100%"
    >
        <VBox width="60%">
            <Button text="panel1" />
        </VBox>
        <VBox
            width="40%"
            alignItems="Center"
            justifyContent="Center"
            class="rightPanel"
            visible="true"
        >
            <l:VerticalLayout
                id="rightPanelRegister"
                width="100%"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    xmlns:form="sap.ui.layout.form"
                    xmlns="sap.m"
                >
                    <Title
                        text="Register"
                        level="H2"
                    />

                    <Label text="First Name" />
                    <Input
                        id="firstNameInput"
                        placeholder="Enter First Name"
                    />

                    <Label text="Last Name" />
                    <Input
                        id="lastNameInput"
                        placeholder="Enter Last Name"
                    />

                    <Label text="Email" />
                    <Input
                        id="inputEmail"
                        type="Email"
                        placeholder="Enter Email"
                    />

                    <Label text="Password" />
                    <Input
                        id="passwordInput"
                        type="Password"
                        placeholder="Enter Password"
                    />

                    <Label text="Confirm Password" />
                    <Input
                        id="confirmPasswordInput"
                        type="Password"
                        placeholder="Confirm Password"
                    />

                    <Button
                        type="Emphasized"
                        text="Register"
                        press="onRegisterPress"
                        class="sapUiSmallMarginTop"
                    />

                    <MessageStrip
                        id="showErrorRegister"
                        text="Some fields are empty"
                        type="Error"
                        showIcon="true"
                        showCloseButton="true"
                        visible="false"
                    />
                </form:SimpleForm>
            </l:VerticalLayout>
            <!-- login -->
            <l:VerticalLayout
                id="rightPanelLogin"
                width="100%"
                visible="false"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    xmlns:form="sap.ui.layout.form"
                    xmlns="sap.m"
                >
                    <Title
                        text="Login"
                        level="H2"
                    />

                    <Label
                        text="Email"
                        labelFor="inputEmail"
                        design="Bold"
                    />
                    <Input
                        id="loginEmail"
                        type="Email"
                        placeholder="Enter email"
                        class="sapUiSmallMarginBottom"
                    />
                    <Label
                        text="Password"
                        labelFor="Password"
                        design="Bold"
                    />
                    <Input
                        type="Password"
                        id="loginPassword"
                        placeholder="Password"
                        class="sapUiSmallMarginBottom"
                    />

                    <Button
                        type="Emphasized"
                        text="Login"
                        press="onLoginPress"
                        class="sapUiSmallMarginTop"
                    />

                    <Label
                        id="showErrorLogin"
                        visible="false"
                        text="Some fields are empty"
                        design="Bold"
                    />
                </form:SimpleForm>
            </l:VerticalLayout>
            <HBox class="sapUiSmallMargin">
                <VBox id="goRegister" visible="false">
                    <Label
                        text="Doesn't have an account?"
                        design="Bold"
                    />
                    <Link
                        text="Register"
                        press="toRegisterPressed"
                    />
                </VBox>
                
                <VBox id="goLogin">
                    <Label
                        text="Alredy have an account?"
                        design="Bold"
                    />
                    <Link
                        text="Login"
                        press="toLoginPressed"
                    />
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</mvc:View>
